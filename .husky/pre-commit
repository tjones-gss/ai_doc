#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check if lint-staged passed
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix the issues above."
  exit 1
fi

echo "✅ Pre-commit checks passed!"
npx lint-staged
